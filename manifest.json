{
    "manifest_version": 3,
    "name": "Investigate Chrome Extension",
    "description": "chrome extension",
    "version": "1.0",
    "action": {
        "default_icon": "assets/purplesquare.png",
        "default_popup":"popup.html"
    },
    
    "background": {
        "service_worker": "background.js"
        
        }
    ,
    
    "permissions": [
        "activeTab",
        "contextMenus",
        "tabs",
        "scripting",
        "storage"
    ]
}