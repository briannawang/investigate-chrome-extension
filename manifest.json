{
    "manifest_version": 3,
    "name": "Investigate Chrome Extension",
    "description": "chrome extension",
    "version": "1.0",
    "action": {
        "default_icon": "assets/purplesquare.png"
    },
    "content_scripts": [
        {
            "matches": ["<all_urls>"],
            "js": ["popup.js"],
            "run_at": "document_end",
            "all_frames": true
        }
    ],
    "web_accessible_resources": [{
        "resources": ["popup.html", "popup.js", "selection.js"],
        "matches": ["<all_urls>"]
        }], 
    
    "permissions": [
        "activeTab",
        "contextMenus",
        "tabs",
        "scripting"
    ]
}